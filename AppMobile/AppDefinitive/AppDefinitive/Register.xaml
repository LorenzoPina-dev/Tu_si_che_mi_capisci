<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDefinitive.Register">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="REGISTRAZIONE" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Label Text="" x:Name="error"/>
            <Label Text="Username"/>
            <Entry x:Name="user"/>
            <Label Text="email"/>
            <Entry x:Name="email"/>
            <Label Text="Password:"/>
            <Entry x:Name="pass"/>
            <Label Text="Ripeti password:"/>
            <Entry/>

            <Button Text="Registrati" Clicked="registratiButton"/>
            <Button Text="Torna alla login" Clicked="tornaLogin"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>